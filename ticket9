#include <iostream>

using namespace std;

class Matrix{
private:
    int A[2][2];
public:
    Matrix() {A[0][0]=0;A[0][1]=0;A[1][0]=0;A[1][1]=0;}

    Matrix(int value11, int value12,  int value21, int value22) {A[0][0]=value11; A[0][1]=value12; A[1][0]=value21; A[1][1]=value22;}


    bool operator<(Matrix X)
    {
        if (A[0][0]*A[1][1]<X.A[0][0]*X.A[1][1])
            return true;
        else
            return false;
    }

    float operator-()
    {   
        return A[0][0]*A[1][1];
    }
};

int main() {

    Matrix A(2,2,2,2), T(1,3,5,7);
    bool check=T<A;
    cout << check << endl;
    cout << -A << endl;
    cout << -T << endl;
    return 0;
}
